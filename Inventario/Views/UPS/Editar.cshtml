@model MUps

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/css/mystyle.css">
</head>
<body>

    <div class="encabezado">
        <h1>Actualizar UPS</h1>
    </div>

    <div class="contenido-mvc">

        <form class=factura-form action=@Url.Action("Actualizar","UPS") method="post">
            <label for="">Codigo Empleado</label>
            <input type="text" value="@Model.Cod_Emple" name="Cod_Emple">
            <br />

            <label for="">Nombre</label>
            <input type="text" value="@Model.Nombre" name="Nombre">
            <br />

            <label for="">No Inventario</label>
            <input type="text" value="@Model.NoInventario" name="NoInventario">
            <br />

            <label for="">Marca</label>
            <input type="text" value="@Model.Marca" name="Marca">
            <br />


            <label for="">Estado</label>
            <select name="Estado">
                @if (Model.Estado == "A")
                {
                    <option value="A" selected>Activo</option>
                    <option value="I">Inactivo</option>
                }
                else
                {
                    <option value="A">Activo</option>
                    <option value="I" selected>Inactivo</option>
                }
            </select>
            <br />
            <label for="">Condicion</label>
            <input type="text" value="@Model.Condicion" name="Condicion">
            <br />
            <br />
            <br />
            <button type="submit">Guardar</a></button>
            <button type="button" id="cancelar"><a href=@Url.Action("Home_","Home")>Cancelar</a></button>
            <button type="button" id="Nuevo"><a href=@Url.Action("Nuevo","UPS")>Nuevo</a></button>
        </form>

    </div>
    
</body>
</html>