@model MEmpleado

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div class="encabezado">
        <h2>Editar Empleado</h2>
    </div>

    <div class="contenido-mvc">
        <form class=factura-form action=@Url.Action("Actualizar","Empleado") method="post">

        <label for="">Codigo Empleado</label>
        <input type="text" id="Cod_Emple" value="@Model.Cod_Emple" name="Cod_Emple">
        <br />

        <label for="">Nombre</label>
        <input type="text" value="@Model.Nombre" name="Nombre">
        <br />

        <label for="">Area</label>
        <input type="text" value="@Model.Area" name="Area">
        <br />

        <label for="">Estado</label>
        <select name="Estado">
            @if (Model.Estado == "A")
            {
                <option value="A" selected>Activo</option>
                <option value="I">Inactivo</option>
            }
            else
            {
                <option value="A">Activo</option>
                <option value="I" selected>Inactivo</option>
            }
        </select>
        <br />

        <label for="">Sucursal</label>
        <input type="text" value="@Model.Sucursal" name="Sucursal">
        <br />

        <br />
        <br />
        <button type="submit">Guardar</button>
        <button type="button" id="cancelar"><a href=@Url.Action("Home_","Home")>Cancelar</a></button>
        <button type="button" id="Nuevo"><a href=@Url.Action("Nuevo","Empleado")>Nuevo</a></button>
    </form>
    </div>
    
</body>
</html>