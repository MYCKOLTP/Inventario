@model MScanner

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <form class=factura-form action=@Url.Action("Actualizar","Scanner") method="post">
    <label for="">Codigo Empleado</label>
        <input type="text" value="@Model.CodEmple" name="CodEmple">
    <br />

    <label for="">Nombre</label>
        <input type="text" value="@Model.Nombre" name="Nombre">
    <br />

    <label for="">No Inventario</label>
        <input type="text" value="@Model.NoImventario" name="NoImventario">
    <br />

    <label for="">Marca</label>
        <input type="text" value="@Model.Marca" name="Marca">
    <br />

    <label for="">Modelo</label>
        <input type="text" value="@Model.Modelo" name="Modelo">
    <br />
    <label for="">Serie</label>
        <input type="text" value="@Model.Serie" name="Serie">
    <br />
    <label for="">Estado</label>
        <select name="Estado">
            @if (Model.Estado == "A")
            {
                <option value="A" selected>Activo</option>
                <option value="I">Inactivo</option>
            }
            else
            {
                <option value="A">Activo</option>
                <option value="I" selected>Inactivo</option>
            }
        </select>
    <br />
    <label for="">Condicion</label>
        <input type="text" value="@Model.Condicion" name="Condicion">
    <br />
    <br />
    <br />
    <button type="submit">Guardar</a></button>
    <button type="button" id="cancelar"><a href=@Url.Action("Home_","Home")>Cancelar</a></button>
    </form>
</body>
</html>